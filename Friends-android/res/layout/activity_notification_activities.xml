<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NotificationActivitiesActivity" >

    <ImageView
        android:id="@+id/imgActivityNotification"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动名称：" />

        <TextView
            android:id="@+id/txtNotifiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="活动名称" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动地点：" />

        <TextView
            android:id="@+id/txtNotifiAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="活动地点" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名截止时间：" />

        <TextView
            android:id="@+id/txtNotifiDeadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="报名截止时间" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间：" />

        <TextView
            android:id="@+id/txtNotifiStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="开始时间" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationCurNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前人数：" />

        <TextView
            android:id="@+id/txtNotifiNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="当前人数" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtNotificationIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动简介：" />

        <TextView
            android:id="@+id/txtNotifiIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="活动简介" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal" >

        <CheckBox
            android:id="@+id/ckbNotmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:text="不再提醒" />

        <Button
            android:id="@+id/btnSeemore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="seemore"
            android:text="进入活动页面" />

    </LinearLayout>

</LinearLayout>